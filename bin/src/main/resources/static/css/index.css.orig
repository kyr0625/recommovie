@charset "UTF-8";
	body,div,header,footer,nav,section,article,aside,address,
	ul,ol,li,dl,dt,dd,p,h1,h2,h3,h4,h5,h6,
	table,tr,th,td,caption,thead,tfoot,tbody,
	form,fieldset,figure,figcaption{
	margin: 0; padding: 0;}
	img{vertical-align: top; border: 0; max-width: 100%;}
	ul{list-style: none;}
	a{text-decoration: none; color: #000;}
	html,body{width: 100%; min-height: 100%;}
	input{outline: 0; border: 0;}
	
	*{font-family: 'Noto Sans KR', sans-serif;}
	
	
    
    #movieInfo img{width:500px; height: 527px; position: relative;
    margin: 0 auto;}
    
    #recommend{width:310px; height:90px; margin : 30px auto;
    		   border-radius : 15px; background-color:#2ECC71; 
    		   text-align: center;}
	#recommend a {font-size: 14px; color: #fff; 
				  line-height: 90px;}
				  
	#comment {width:400px; height:200px; 
			  margin: 30px auto; background-color: gray;}